.organization {
  width: 100%;
  background: #fff !important;
  padding-bottom: 80rpx;
}

.contanier {
  width: 634rpx;
  margin: 0 auto;
}

.students_list {
  border-bottom: 1px solid #eee;
}

.students_list view {
  margin: 30rpx 0 15rpx;
  font-size: 36rpx;
  color: #333;
}

.name {
  display: block;
  margin-top: 30rpx;
  font-size: 36rpx;
  color: #333;
}

.students_list input {
  font-size: 28rpx;
  color: #999;
  padding: 6rpx;
}

/* 开户行名称 */

.picker {
  display: flex;
  flex-flow: row nowrap;
  justify-content: space-between;
  margin-top: 20rpx !important;
}

.picker>text {
  font-size: 32rpx;
  color: #ddd !important;
  padding-left: 4rpx;
}

.picker view {
  width: 20rpx;
  height: 30rpx;
  margin-top: -2rpx;
}

.picker view image {
  width: 100%;
  height: 100%;
  vertical-align: top;
  padding-top: 10rpx;
}

.nextBtn {
  width: 616rpx;
  height: 80rpx;
  line-height: 80rpx;
  text-align: center;
  margin: 70rpx auto 10rpx;
  background: #3772ef;
  font-size: 34rpx;
  color: #fff;
  border-radius: 40rpx;
}
