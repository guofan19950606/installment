/* pages/person/person.wxss */
page{
  background: #f7f7f7;
}
.containers{
  display: flex;
  flex-direction: column;
  flex: 1;
}
.top_box{
  padding:60rpx 0 65rpx 49rpx;
  background: linear-gradient(to right, rgba(10, 182, 254, 0.56), rgba(113, 132, 230, 0.56));
  display:flex;
  flex-direction:row;
  align-items:center;
}
.top_head{
  width:145rpx;
  height:145rpx;
  overflow:hidden;
  border-radius:50%;
}
.person_head{
  display:block;
  width:145rpx;
  height:145rpx;
}
.opendata_head{
  display:block;
  width:145rpx;
  height:145rpx;
}
.top_right{
    display:flex;
    flex-direction: column;
    padding-left:23rpx;
}
.person_name{
  color:#fff;
  font-size:32rpx;
}
.person_state{
  width:100rpx;
  color:#fff;
  font-size:24rpx;
  border:1rpx solid #fff;
  box-sizing: border-box;
  border-radius:10rpx;
  text-align: center;
  margin-top:10rpx;
}
.person_list{
  width:100%;
  height:auto;
  margin-top:30rpx;
  background: #fff;
}
.person_list_li{
  width:100%;
  padding:25rpx;
  border-bottom:1rpx solid #F8F8F8;
  box-sizing:border-box;
  display:flex;
  flex-direction: row;
  justify-content: space-between;
}
.person_list_li_left,.person_list_li_right{
  display:flex;
  flex-direction: row;
  align-items: center;
}
.person_list_img{
  display:block;
  width:44rpx;
  height:44rpx;
}
.person_list_view{
  color:#747474;
  font-size:28rpx;
  margin-left:21rpx;
}
.person_li_state{
  font-size:28rpx;
  color:#747474;
  margin-right:10rpx;
}
.person_li_states{
  font-size:28rpx;
  color:#1DD9B8;
  margin-right:10rpx;
}
.person_li_arrow{
  display:block;
  width:14rpx;
  height:20rpx;
}
/* 按钮 */
/* 确认按钮样式 */
.button{
  padding: 58rpx 67rpx;
  width:100%;
  display:flex;                  
  justify-content: center;
  flex: 1;
}
.sure{
  width: 100%;
  position: relative;
}
.savaButton{
  width: 100%;
  height: 80rpx;
  line-height: 80rpx;
  text-align: center;
  background: #4462FE;
  border-radius: 50rpx;
  font-size: 34rpx;
  color:#FFFFFF;
  position: absolute;
  bottom: 0;
}








