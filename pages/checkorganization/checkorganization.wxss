/* pages/checkorganization/checkorganization.wxss */

.organization {
  width: 100%;
  background:#fff ! important;
  padding-bottom:80rpx;
}

.contanier {
  width: 634rpx;
  margin: 0 auto;
}

.students_list {
  border-bottom: 1px solid #eee;
}

.students_list view {
  margin: 30rpx 0 15rpx;
  font-size: 36rpx;
  color: #333;
}
.line{
  position: absolute;
  right:-26rpx;
}
.students_list input {
  font-size: 28rpx;
  color: #999;
  padding: 6rpx;
}

.nextBtn {
  width: 616rpx;
  height: 80rpx;
  line-height: 80rpx;
  text-align: center;
  margin: 70rpx auto 10rpx;
  background: #3772ef;
  font-size: 34rpx;
  color: #fff;
  border-radius: 40rpx;
}

/* 开户行名称 */

.picker {
  display: flex;
  flex-flow: row nowrap;
  justify-content: space-between;
  margin-top: 20rpx !important;
}

.picker>text {
  font-size: 32rpx;
  color: #ddd !important;
  padding-left: 4rpx;
}

.picker view {
  width: 20rpx;
  height: 30rpx;
  margin-top: -2rpx;
}

.picker view image {
  width: 100%;
  height: 100%;
  vertical-align: top;
  padding-top: 10rpx;
}
.name {
  display: block;
  margin-top: 30rpx;
  font-size: 36rpx;
  color: #333;
}
.canvas {
  height: 230rpx;
  width: 634rpx;
  margin: 0 auto;
  border: 5px solid rgb(223, 159, 62);
  display: flex;
  justify-content: space-around;
  align-items: center;
  margin-top: 50rpx;
}

.canvasone {
  width: 156rpx;
  height: 156rpx;
  display: flex;
  align-items: center;
}

.canvastwo {
  display: flex;
  flex-direction: column;
  align-items: center;
  position: relative;
  justify-content: center;
}

.canvastwo .cum {
  font-size: 26rpx;
  color: #7d92ff;
  padding: 10rpx 0;
}

.canvastwo .cummon {
  font-size: 32rpx;
  color: #4462fe;
  padding: 10rpx 0;
}

.canvastwo .copycum {
  font-size: 24rpx;
  background: #4462fe;
  border-radius: 20rpx;
  color: #fff;
}

.content-car-second .second-code {
  display: flex;
  flex-direction: column;
  align-items: center;
  margin: auto;
  position: relative;
}

.content-car-second .second-code image {
  width: 350rpx;
  height: 350rpx;
  margin-top: 20rpx;
}

.canvas-box {
  position: fixed;
  top: 999999rpx;
  left: 0;
}
