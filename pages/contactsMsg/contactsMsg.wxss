.contactsMsg {
  width: 634rpx;
  margin: 0 auto;
}
.conlist{
  padding-bottom:80rpx;
    overflow-y: auto;
}
.contactsMsg_list {
  border-bottom: 1px solid #eee;
}

.contactsMsg_list view {
  margin: 30rpx 0 15rpx;
  font-size: 36rpx;
  color: #333;
}

.contactsMsg_list view text {
  color: #f00;
}

.contactsMsg_list input {
  font-size: 28rpx;
  color: #999;
  padding: 6rpx;
}

.picker {
display: flex;
flex-flow: row nowrap;
justify-content: space-between;
}

.picker>text {
font-size: 28rpx;
color: #999 !important;
padding-left: 4rpx;
}
.picker view {
width:20rpx;
height:30rpx;
margin-top:-2rpx;
}
.picker view image{
width:100%;
height:100%;
vertical-align:top;
padding-top:10rpx;
}

.contactsMsgBtn {
  width: 616rpx;
  height: 80rpx;
  line-height: 80rpx;
  text-align: center;
  margin: 80rpx auto 20rpx;
  background: #3772ef;
  font-size: 34rpx;
  color: #fff;
  border-radius: 40rpx;
}

textarea {
  width:100% ! important;
  border: 1px solid #ddd;
  border-radius: 10rpx;
  margin-top: 20rpx;
  padding: 10rpx;
}
/* 去掉滚动条 */
::-webkit-scrollbar {
  width: 0;
  height: 0;
  color: transparent;
  display: none;
}

