.login_top {
  margin-top: 118rpx;
  display: flex;
  flex-flow: row nowrap;
}

.content{
  flex: 1;
  background: #fff;
  }

.top_left {
  width: 28rpx;
  height: 100rpx;
  padding: 0;
  margin: 0;
}

.top_left image {
  width: 100%;
  height: 100%;
}

.top_right {
  padding-left: 28rpx;
}

.top_right view:first-child {
  font-size: 48rpx;
  color: #2e2e2e;
  font-weight: bold;
}

.top_right view:last-child {
  font-size: 20rpx;
  color: #2e2e2e;
  padding-top: 6rpx;
}

.login_center {
  width: 616rpx;
  margin: 0 auto;
}

.login_center .phone {
  margin-top: 150rpx;
}

.login_center .phone2 {
  margin-top: 100rpx;
}

.phone, .phone2 {
  display: flex;
  flex-flow: row nowrap;
  height: 50rpx;
  line-height: 120rpx;
  border-bottom: 1px solid #eee;
}

.phone image, .phone2 image {
  width: 28rpx;
  height: 36rpx;
}

.phone input, .phone2 input {
  display: block;
  width: 80%;
  font-size: 32rpx;
  color: #999;
  padding-left: 34rpx;
}

.loginBtn {
  width: 616rpx;
  height: 80rpx;
  line-height: 80rpx;
  text-align: center;
  margin: 80rpx auto 0;
  background: #3772ef;
  font-size: 34rpx;
  color: #fff;
  border-radius: 40rpx;
}

.loginBtn_two {
  width: 616rpx;
  margin: 0 auto;
  display: flex;
  flex-flow: row nowrap;
  justify-content: space-between;
}

.phone_login, .find_pass {
  font-size: 20rpx;
  color: #2e2e2e;
  padding: 30rpx 0;
}

.bottomImg {
  width: 100%;
  position: absolute;
  left: 0;
  bottom: 0;
}

.bottomImg image {
  width: 100%;
  height: 168rpx;
  position: absolute;
  bottom: 0;
}

.logintitle {
  color: #2e2e2e;
}

.jiaoyan {
  color: #f31919;
  font-size: 20rpx;
  padding-left: 65rpx;
}
