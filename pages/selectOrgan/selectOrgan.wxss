.container {
  border-top: 1rpx solid #ddd;
  box-sizing: border-box;
  /* overflow-y: auto */
}
form {
  display: block;
  width: 100%;
  background: #fff;
  padding: 0 60rpx 50rpx 56rpx;
  box-sizing: border-box;
}

.bind_bc_form {
  width: 100%;
  display: flex;
  flex-direction: column;
}

.bind_bc_form_label {
  color: #333;
  font-size: 36rpx;
  margin-top: 50rpx;
}

.bind_bc_form_inp {
  color: #666;
  font-size: 30rpx;
  border-bottom: 1rpx solid #ddd;
  box-sizing: border-box;
  margin-top: 33rpx;
}

.organ_title {
  color: #333;
  font-size: 38rpx;
  font-weight: bold;
  margin-top: 53rpx;
}

.organ_course_info {
  width: 100%;
  display: flex;
  flex-direction: row;
  align-items: center;
  margin-top: 76rpx;
  justify-content: space-between;
}

.course_label {
  width: 35%;
  font-size: 36rpx;
  color: #333;
}

.course_inp {
  width: 65%;
  font-size: 30rpx;
  border-bottom: 1rpx solid #ddd;
  box-sizing: border-box;
}

/* 课程内容下拉框 */

.organ_course_info_picker {
  width: 100%;
  display: flex;
  flex-flow: row nowrap;
  justify-content: space-between;
  margin-top: 76rpx;
}

.course_label2 {
  width: 35%;
  font-size: 36rpx;
  color: #333;
}

picker {
  display: block;
  width: 65%;
  border-bottom: 1rpx solid #ddd;
}

.picker_select {
  width: 100%;
  height: 50rpx;
  display: flex;
  flex-flow: row nowrap;
  justify-content: space-between;
}

.picker_select>text {
  display: block;
  width: 90%;
  font-size: 32rpx;
  color: #999 !important;
  padding-left: 4rpx;
  white-space: nowrap;
  text-overflow: ellipsis;
  overflow: hidden;
  word-break: break-all;
}

.picker_select view {
  width: 20rpx;
  height: 30rpx;
  margin-top: 10rpx;
}

.picker_select view image {
  width: 100%;
  height: 100%;
  vertical-align: top;
}

/* 下拉内容 */

.select_box {
  background: #fff;
  width: 65%;
  position: absolute;
  top: 60rpx;
  left: 210rpx;
  z-index: 99;
  overflow: hidden;
  text-align: left;
  animation: myfirst 0.5s;
  font-size: 30rpx;
  color: #333;
  border: 1rpx solid #eee;
  box-sizing: border-box;
}

.select_one {
  padding-left: 20rpx;
  width: 100%;
  height: 60rpx;
  position: relative;
  line-height: 60rpx;
  border-bottom: 1rpx solid #eee;
  box-sizing: border-box;
}

textarea {
  width: 100% !important;
  border: 1px solid #ddd;
  border-radius: 10rpx;
  margin-top: 20rpx;
  padding: 10rpx;
}
::-webkit-scrollbar {
  width: 0;
  height: 0;
  color: transparent;
  display: none;
}
