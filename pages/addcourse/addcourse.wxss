/*mask*/

.drawer_screen {
  width: 100%;
  height: 100%;
  position: fixed;
  top: 0;
  left: 0;
  z-index: 1000;
  background: #000;
  opacity: 0.5;
  overflow: hidden;
}

/*content*/

.drawer_box {
  width: 650rpx;
  overflow: hidden;
  position: fixed;
  top: 50%;
  left: 0;
  z-index: 1001;
  background: #fafafa;
  margin: -150px 50rpx 0 50rpx;
  border-radius: 10px;
}

.drawer_title {
  padding: 10px;
  /* font: 20px "microsoft yahei"; */
  font-size: 32rpx;
  text-align: center;
}

.drawer_content {
  height: 176px;
  overflow-y: scroll; /*超出父盒子高度可滚动*/
}

.btn_ok {
  padding: 10px;
  text-align: center;
  font-size: 32rpx;
  border-top: 1px solid #e8e8ea;
  color: #4462fe;
}

